{
  "compilerOptions": {
    "target": "es6",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "lib": ["es2020"]
  },
  "exclude": ["node_modules"]
}
